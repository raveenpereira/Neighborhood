 <script>
  var app = angular.module('myApp', []);
app.controller('menuCtrl', function($scope,$window,$http) {
  
 $scope.showposts = function()  {   
      
   //alert($scope.selectedProfileName);
  
            $http.get('/getPosts'). 
            then(function(response) {
            var data = response.data;
